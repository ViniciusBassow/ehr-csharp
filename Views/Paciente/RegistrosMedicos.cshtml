<div class="modal fade" id="depositLiquidityModal" tabindex="-1" aria-labelledby="depositLiquidityModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content overflow-hidden">
            <div class="modal-header pb-0 border-0">
                <h1 class="modal-title h4" id="depositLiquidityModalLabel">Novo Documento</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body undefined">
                <form class="vstack gap-6">
                    <div class="col-md-12">
                        <div class="">
                            <label class="form-label" for="email">Nome do Documento:</label> 
                            <input type="email" class="form-control" id="email" placeholder="Ex: Hemograma">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="">
                            <label class="form-label" for="email">Consulta:</label>
                            <input type="email" class="form-control" id="email" placeholder="Ex: Hemograma">
                        </div>
                    </div>
                    <div>
                        <h6 class="mb-3">Anexo</h6>
                        <div>
                            <div class="rounded border border-2 border-dashed border-primary-hover position-relative">
                                <div class="d-flex justify-content-center px-5 py-5">
                                    <label for="file_upload"
                                           class="position-absolute w-100 h-100 top-0 start-0 cursor-pointer">
                                        <input id="file_upload" name="file_upload" type="file"
                                               class="visually-hidden">
                                    </label>
                                    <div class="text-center">
                                        <div class="text-2xl text-muted"><i class="bi bi-upload"></i></div>
                                        <div class="d-flex text-sm mt-3">
                                            <p class="fw-semibold">Envie um arquivo</p>
                                        </div>
                                        <p class="text-xs text-gray-500">PNG, JPG, PDF até 3MB</p>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary w-100">Enviar Documento</button>
                </form>
            </div>
        </div>
    </div>
</div>


<main class="container-fluid px-3 py-5 p-lg-6 p-xxl-8">

    <div class="mb-6 mb-xl-8">
        <div class="row g-3 align-items-center">
            <div class="col">
                <h1 class="h2 ls-tight">Registros Médicos</h1>
            </div>
        </div>
    </div>


    <div class="row g-8">


        <div class="col-lg-7 vstack gap-5">
            
            <div class="d-flex align-items-end justify-content-between mt-3 mb-3">
                <div>
                    <h4 class="fw-semibold mb-1">Documentos</h4>
                    <p class="text-sm text-muted">
                        Histórico Completo e Atualizado dos Seus Registros e Documentos Médicos
                    </p>
                </div>
                <div class="d-none d-md-flex gap-2">
                    <button type="button" class="btn btn-sm btn-dark">
                        <i class="bi bi-download me-2"></i>Exportar
                    </button>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-nowrap table-flush">
                    <thead>
                        <tr>
                            <th scope="col">
                                <div class="d-flex align-items-center gap-2 ps-1">
                                    <div class="text-base">
                                        
                                    </div><span>Documento</span>
                                </div>
                            </th>
                            <th scope="col">Paciente</th>
                            <th scope="col">Médico</th>
                            <th scope="col">Especialidade</th>
                            <th scope="col">Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-3 ps-1">
                                    
                                    <div class="icon icon-shape w-rem-10 h-rem-10 rounded-circle text-sm bg-primary bg-opacity-25 text-tertiary">
                                        <i class="bi bi-file-fill"></i>
                                    </div>
                                    <div>
                                        <span class="d-block text-heading fw-bold">Hemograma</span>
                                        <span class="text-xs text-muted">10/01/2024</span>
                                    </div>
                                </div>
                            </td>
                            <td><a class="text-current" href="#">Pedro Augusto da Silva Abel</a></td>
                            <td>Thiago Crochat</td>
                            <td>Urologista</td>
                            <td><span class="badge bg-body-secondary text-xs text-success">Analisado</span></td>
                            <td class="text-end">
                                <div class="dropdown">
                                    <a class="text-muted" href="#" role="button"
                                       data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end">
                                        <a href="#!"
                                           class="dropdown-item">Exportar </a>
                                           <a href="#!" class="dropdown-item">Analise </a>
                                           <a href="#!"class="dropdown-item">Retorno</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        
                    </tbody>
                </table>
                <div class="d-flex align-items-center justify-content-between my-4">
                    <div>
                        <span class="text-muted text-sm"> 10 itens de 250 resultados encontrados</span>
                    </div>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination pagination-spaced gap-1">
                            <li class="page-item">
                                <a class="page-link" href="#">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">4</a></li>
                            <li class="page-item"><a class="page-link" href="#">5</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

        <div class="col-lg-3 vstack gap-5">
            <div class="card">
                <div class="card-body pb-0">
                    <div class="mb-2 d-flex align-items-center">
                        <h5>Documentos</h5>
                    </div>
                    <div class="hstack gap-2 mt-4 mb-6">
                        <button class="btn btn-sm btn-neutral" data-bs-target="#depositLiquidityModal" data-bs-toggle="modal">
                            <i class="bi bi-plus me-2 d-none d-sm-inline-block"></i>Novo Documento
                        </button>
                    </div>
                    <div class="surtitle mb-2">Documentos Enviados</div>
                    <div class="vstack gap-2 mx-n3">
                        <div class="position-relative d-flex align-items-center p-3 rounded-3 bg-body-secondary-hover">
                            <div>
                                <span class="d-flex align-items-center justify-content-center w-rem-16 w-md-20 py-3 rounded text-muted text-lg bg-body-secondary">
                                    <i class="bi bi-file-text-fill"></i>
                                </span>
                            </div>
                            <div class="ms-3 ms-md-4 flex-fill">
                                <div class="stretched-link text-limit text-sm text-heading fw-semibold"
                                     role="button" data-bs-toggle="offcanvas"
                                     data-bs-target="#cardDetailsOffcanvas"
                                     aria-controls="cardDetailsOffcanvas">
                                    Hemograma
                                </div>
                                <div class="d-block text-xs gap-2 mt-1">
                                    <span>Especialista: Clínico Geral</span>
                                </div>
                            </div>
                            <div class="d-none d-sm-block ms-auto text-end">
                                <span class="badge bg-body-secondary text-warning">Em análise</span>
                                <div class="d-none d-sm-block text-xs text-muted mt-2">
                                    Adicionado a 2h atrás
                                </div>
                            </div>
                        </div>
                        
                    </div>

                    <div class="surtitle mt-6"></div>

                </div>
            </div>

        </div>
    </div>
</main>

