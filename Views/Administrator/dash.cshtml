@{
    ViewData["Title"] = "Dashboard de Configurações";
}

<div class="container-fluid px-4 py-4">
    <div class="row">
        <!-- Cards -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-syringe fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Sua Prática</h5>
                    <button class="btn btn-primary mt-3">Adicionar Nova Prática</button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-user-md fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Seus Pacientes</h5>
                    <button class="btn btn-primary mt-3">Adicionar Novo Paciente</button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-prescription fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">E-Prescrição</h5>
                    <button class="btn btn-primary mt-3">Adicionar Nova Prescrição</button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-flask fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Laboratórios</h5>
                    <button class="btn btn-primary mt-3">Adicionar Novo Laboratório</button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-user-md fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Médicos</h5>
                    <button class="btn btn-primary mt-3">Adicionar Novo Médico</button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-user-nurse fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Enfermeiros</h5>
                    <button class="btn btn-primary mt-3">Adicionar Novo Enfermeiro</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Estilos adicionais -->
<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

        .card .btn {
            border-radius: 20px;
        }

        .card i {
            color: #17a2b8;
        }
</style>

<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
