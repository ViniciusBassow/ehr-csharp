@{
    ViewData["Title"] = "Carregando...";
}

<div id="loadingScreen" class="loading-screen d-flex justify-content-center align-items-center flex-column">
    <div class="spinner-border text-primary" role="status" style="width: 4rem; height: 4rem;">
        <span class="visually-hidden">Carregando...</span>
    </div>
    <h5 class="mt-3 text-primary">Carregando o hemograma...</h5>
</div>

<style>
    .loading-screen {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: rgba(0, 0, 0, 0.5); /* Fundo transparente escuro */
        z-index: 1050; 
    }
        .loading-screen h5 {
            font-size: 24px; 
            color: #fff; 
            text-align: center;
            margin-top: 15px;
        }

    .spinner-border {
        width: 4rem;
        height: 4rem;
        border-width: 0.5em;
        color: #007bff;
    }
</style>

<script>
    // Oculta a tela de carregamento após o carregamento simulado (3 segundos)
    setTimeout(() => {
        document.getElementById("loadingScreen").style.display = "none";
    }, 3000);
</script>
