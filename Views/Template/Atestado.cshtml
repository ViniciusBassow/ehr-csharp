@model ehr_csharp.Models.Consulta
@{
    var i = 0;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Atestado Médico</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            height: 100vh;
            box-sizing: border-box;
        }

        .email-container {
            width: 100%;
            height: 100vh; /* Garante que ocupa uma página */
            margin: 0;
            background-color: #ffffff;
            border: 1px solid #e0e0e0;
            padding: 20px;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            justify-content: space-between; /* Distribui o conteúdo verticalmente */
        }

        .header {
            text-align: center;
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
        }

            .header h1 {
                font-size: 24px;
                margin: 0;
                color: #007bff;
            }

            .header p {
                font-size: 14px;
                color: #333333;
                margin: 5px 0 0;
            }

        .content {
            flex-grow: 1; /* Faz o conteúdo central se ajustar automaticamente */
            line-height: 1.6;
            color: #333333;
            margin-bottom: 20px; /* Adiciona espaço antes do rodapé */
        }

            .content h2 {
                font-size: 20px;
                text-align: center;
                color: #007bff;
                margin-bottom: 20px;
            }

            .content p {
                font-size: 16px;
                margin: 10px 0;
            }

                .content p span {
                    font-weight: bold;
                    text-decoration: underline;
                }

        .signature {
            text-align: center;
            margin-top: 20px;
            color: black;
        }

            .signature div {
                display: inline-block;
                text-align: center;
                margin: 0 40px;
            }

        .footer {
            text-align: center;
            font-size: 14px;
            color: #777777;
            border-top: 1px solid #e0e0e0;
            padding-top: 10px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="email-container">
        <!-- Cabeçalho -->
        <div class="header">
            <h1>@Model.Medico.Usuario.Name</h1>
            <p>@Model.Medico.Especialidade.Descricao</p>
        </div>

        <!-- Conteúdo principal -->
        <div class="content">
            <h2>Atestado</h2>
            <p>
                Atesto para que <span>@Model.Paciente.NomeCompleto</span> portador da Carteira de identidade n° <span>@Model.Paciente.Rg</span>
                residente e domiciliado(a) à <span>@Model.Paciente.Endereco</span>, esteve sob tratamento médico neste consultório, no dia
                <span>@Model.Data.ToString("dd/MM/yyyy")</span> no período as <span>@Model.Data.ToString("HH:mm")</span> horas do dia e
                deverá se afastar de suas atividades pelo período de ____ até ____ por motivos de @Model.HipoteseDiagnostica

             @*    Atesto para os devidos fins que <span>@Model.Paciente.NomeCompleto</span>, R.G. <span>@Model.Paciente.Rg</span>,
                residente e domiciliado(a) à <span>@Model.Paciente.Endereco</span>, esteve sob tratamento médico neste consultório, no dia
                <span>@Model.Data.ToString("dd/MM/yyyy")</span> no período das <span>@Model.Data.ToString("HH:mm")</span> horas do dia, necessitando o(a) mesmo(a) de convalescença. *@
            </p>
            <p>
                @Model.ConfigTemplateCidade, <span>____/____/____</span>
            </p>
        </div>

        <!-- Assinaturas e rodapé -->
        <div>
            <div class="signature">
                <div>
                    <p>_________________________</p>
                    <p>Assinatura do Paciente</p>
                </div>
                <div>
                    <p>_________________________</p>
                    <p>Assinatura</p>
                </div>
            </div>
            <div class="footer">
                <p>@Model.ConfigTemplateLogradouro, @Model.ConfigTemplateNrLogradouro - @Model.ConfigTemplateBairro - @Model.ConfigTemplateCidade/@Model.ConfigTemplateEstado</p>
                <p>@Model.ConfigTemplateTelefone | @Model.ConfigTemplateEmail | @Model.ConfigTemplateSiteApoio</p>
            </div>
        </div>
    </div>
</body>
</html>
