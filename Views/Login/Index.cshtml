@model ehr_csharp.Models.Usuario
@{
    Layout = null;
    var errors = ViewData.ModelState.Where(n => n.Value.Errors.Count > 0).ToList();
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="dark light" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ehr_csharp.styles.css" asp-append-version="true" />
    <title>Login</title>
    <link rel="stylesheet" href="../css/main.css" />
    <link rel="stylesheet" href="../css/utility.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://api.fontshare.com/v2/css?f=satoshi@900,700,500,300,401,400&amp;display=swap" />

    <link rel="icon" type="image/png" href="~/LogoAvita.ico" sizes="64x64">
</head>
@using (Html.BeginForm("Login", "Usuario", FormMethod.Post))
{
    <div class="d-flex justify-content-center align-items-center min-vh-100 bg-dark">
        <div class="position-absolute top-50 start-0 p-3" style="transform: translateY(-50%); margin-left: 90px; max-width: 20%; height: auto;">
            <img src="~/img/logos/FundoAvita.png" class="img-fluid" alt="Logo" />
        </div>
        <div class="col-12 col-md-8 col-lg-7">
            <div class="w-md-50 mx-auto px-10 px-md-0 py-10">
                <div class="mb-10">
                    <a class="d-inline-block d-lg-none mb-10" href="/pages/dashboard.html">
                        <img src="~/img/logos/FundoAvita.png" class="h-rem-0" alt="Logo escuro" />
                    </a>
                    <h1 class="ls-tight fw-bolder h3 text-white">Faça login na sua conta </h1>
                </div>
                <div class="mb-5">
                    @if (errors.Count > 0)
                    {
                        <div class="col-xl-12" style="margin-top:40px;">
                            <div class="alert alert-danger">
                                @Html.ValidationSummary(false, "Erros encontrados:")
                            </div>
                        </div>
                    }
                    <label class="form-label text-white" for="email" style="font-size: 1.2rem;">Usuário</label>
                    <input type="text" class="form-control" name="usuario.UserName" id="email" placeholder="Digite seu usuário">
                </div>
                <div class="mb-5">
                    <div class="d-flex justify-content-between gap-2 mb-2 align-items-center">
                        <label class="form-label text-white mb-0" for="password" style="font-size: 1.2rem;">Senha</label>
                        <a href="#" class="text-sm text-white text-primary-hover text-underline">Esqueceu sua senha?</a>
                    </div>
                    <input type="password" class="form-control" id="password" autocomplete="current-password" name="usuario.Password" placeholder="Digite sua senha" />
                </div>
                <div class="mb-5">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="usuario.RememberMe" id="check_example" />
                        <label class="form-check-label text-white" for="check_example ">Mantenha-me conectado</label>
                    </div>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary w-100">Entrar</button>
                </div>
            </div>
        </div>
    </div>
}
<script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
<script src="/js/main.js"></script>
<script src="/js/switcher.js"></script>
