<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Configuração do gráfico
    const ctx = document.getElementById('graficoPacientes').getContext('2d');
    const graficoPacientes = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun'],
            datasets: [{
                label: 'Pacientes Mensais',
                data: [200, 300, 400, 600, 500, 357],
                borderColor: 'rgba(54, 162, 235, 1)',
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                fill: true,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: true,
                    position: 'top',
                }
            },
            scales: {
                x: {
                    title: {
                        display: true,
                        text: 'Meses'
                    }
                },
                y: {
                    title: {
                        display: true,
                        text: 'Pacientes'
                    },
                    beginAtZero: true
                }
            }
        }
    });
</script>
